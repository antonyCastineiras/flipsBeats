<div class="jumbotron jumbotron-fluid">
	<div class="container text-center">
		<h1>flipsBeats</h1>
		<p>Buy some of these beats</p>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		<ul class="list-group">
			<% Admin.first.tracks.each do |track| %>
				<li class="track list-group-item">
					<p><%= track.name %></p>
					<p><%= number_to_currency(track.price, unit: 'Â£') %></p>
				</li>
			<% end %>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		<%= form_for @new_admin, url: admin_registration_path, method: :post do |f| %>
			<div class="form-group">
				<%= f.label :email %>
		    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :password %>
		    <%= f.text_field :password, autofocus: true, class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation %>
		    <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control' %>
			</div>

			<div class="actions">
				<%= f.submit class: 'btn btn-primary' %>
			</div>
		<% end %>
	</div>
</div>
