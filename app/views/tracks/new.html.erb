<%= form_for @track, url: tracks_path, method: :post do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :price %>
		<%= f.number_field :price, class: 'form-control', step: '0.01' %>
	</div>

	<div class="actions">
		<%= f.submit class: 'btn btn-primary' %>
	</div>
<% end %>

