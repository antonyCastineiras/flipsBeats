<div class="row">
	<div class="col-xs-12 col-md-6 col-md-offset-3">
		
<%= form_for @track, url: tracks_path, method: :post do |f| %>
	<% if flash[:failed_track_errors] %>
		<%= form_errors_for(flash[:failed_track_errors]) %>
	<% end %>
	
	<h4>Upload a track</h4>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :price %>
		<%= f.number_field :price, class: 'form-control', step: '0.01' %>
	</div>

	<div class="actions">
		<%= f.submit class: 'btn' %>
	</div>
<% end %>
	</div>
</div>

